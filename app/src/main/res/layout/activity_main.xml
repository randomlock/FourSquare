<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/redmi2"
    android:clickable="false"
    android:focusable="false"

    android:focusableInTouchMode="false"

    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/mytoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="@color/actionbar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:id="@+id/mytoolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="@color/actionbar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_below="@+id/mytoolbar"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"

        >

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/food"
            android:layout_marginLeft="22dp"
            android:id="@+id/restaurant"
            android:layout_alignBottom="@+id/mytoolbar"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/dance"
            android:layout_marginLeft="22dp"
            android:id="@+id/dance"
            android:layout_alignBottom="@+id/mytoolbar"
            android:layout_toRightOf="@+id/wine"
            android:layout_toEndOf="@+id/wine"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/drinks"
            android:layout_marginLeft="22dp"
            android:id="@+id/wine"
            android:layout_alignBottom="@+id/mytoolbar"
            android:layout_toRightOf="@+id/restaurant"
            android:layout_toEndOf="@+id/restaurant"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/coffee"
            android:layout_marginLeft="22dp"
            android:id="@+id/coffee"
            android:layout_alignBottom="@+id/mytoolbar"
            android:layout_toRightOf="@+id/dance"
            android:layout_toEndOf="@+id/dance"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
        <ImageView
            android:layout_width="100px"

            android:layout_height="100px"
            android:src="@drawable/shopping"
            android:layout_marginLeft="22dp"
            android:id="@+id/shopping"
            android:layout_alignBottom="@+id/mytoolbar"
            android:layout_toRightOf="@+id/coffee"
            android:layout_toEndOf="@+id/coffee"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </android.support.v7.widget.Toolbar>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_below="@+id/mytoolbar1"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:focusable="false"
        android:background="@color/material_blue_grey_800"
        android:divider="#00000000"
        android:dividerHeight="2dip"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:textStyle="bold"
        android:id="@+id/textView8"
        android:layout_below="@+id/mytoolbar1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Search any place near you"
        android:id="@+id/textView9"

        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp" />
</RelativeLayout>
