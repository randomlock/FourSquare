<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="14dp"
    android:paddingTop="14dp"
    android:layout_height="match_parent"
    android:background="@null"
    android:cacheColorHint="#DAFFFFFF"
     >

    <com.loopj.android.image.SmartImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/my_image"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TITLE"
        android:capitalize="words"
        android:textColorHint="#E91E63"
        android:singleLine="true"
        android:textColor="#ff247cff"
        android:id="@+id/title"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/my_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
      />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:background="@drawable/circlebutton"
        android:id="@+id/rating"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/my_image"
        android:layout_alignEnd="@+id/phone"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Phone number"
        android:id="@+id/phone"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"

        android:layout_alignTop="@+id/distance"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ADDRESS"
        android:id="@+id/address"


        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/title"
        android:layout_alignEnd="@+id/phone"
        android:layout_alignBottom="@+id/my_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:paddingTop="10dp"
        android:id="@+id/distance"
        android:layout_below="@+id/my_image"
        android:layout_alignParentStart="true" />


</RelativeLayout>